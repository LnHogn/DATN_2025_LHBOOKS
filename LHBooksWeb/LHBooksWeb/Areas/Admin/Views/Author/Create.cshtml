@model Author

@{
    ViewBag.Title = "Thêm mới tác giả";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-3 text-gray-800">Quản lý tác giả</h1>

<form asp-area="Admin" asp-controller="Author" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Thêm mới tác giả</h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label class="control-label">Họ tên</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Thông tin</label>
                    <textarea asp-for="Bio" class="form-control" id="editor"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="/Admin/Author" class="btn btn-secondary">Hủy</a>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('editor', {
                customConfig: '~/adminlib/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
        
    </script>
}