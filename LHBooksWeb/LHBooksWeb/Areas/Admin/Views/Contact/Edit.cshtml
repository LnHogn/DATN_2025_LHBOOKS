@model ContactModel

@{
    ViewBag.Title = "Chỉnh sửa liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-3 text-gray-800">Chỉnh sửa thông tin tác giả</h1>

<form asp-controller="Contact" asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(x => x.Name)

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-primary">Chỉnh sửa thông tin liên hệ</h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" id="editor"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Map" class="control-label"></label>
                <textarea asp-for="Map" class="form-control"></textarea>
                <span asp-validation-for="Map" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Logo</label>
                <input asp-for="ImageUpload" class="form-control" />
                <td><img src="~/Uploads/logo/@Model.LogoImg"  width="120px"/></td>
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="/Admin/Contact" class="btn btn-secondary">Hủy</a>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('editor', {
                customConfig: '/config.js',
                extraAllowedContent: 'span',
            });
        });

    </script>
}
