@model UserDetailViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
<h1 class="h3 mb-3 text-gray-800">Quản lý tài khoản</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h5 class="m-0 font-weight-bold text-primary">Chi tiết tài khoản</h5>
    </div>
    <div class="card-body">
        <div class="form-group">
            <dt>Tên đăng nhập</dt>
            <p class="form-control">@Model.UserName</p>
        </div>
        <div class="form-group">
            <dt>Họ và tên</dt>
            <p class="form-control">@Model.FullName</p>
        </div>
        <div class="form-group">
            <dt>Số điện thoại</dt>
            <p class="form-control">@Model.PhoneNumber</p>
        </div>
        <div class="form-group">
            <dt>Email</dt>
            <p class="form-control">@Model.Email</p>
        </div>
        <div class="form-group">
            <dt>Quyền</dt>
            <p class="form-control">@Model.Role</p>
        </div>
        <div class="form-group">
            <dt>Trạng thái tk</dt>
            <p class="form-control">@Model.isActive</p>
        </div>

        <a href="/Admin/Account" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
