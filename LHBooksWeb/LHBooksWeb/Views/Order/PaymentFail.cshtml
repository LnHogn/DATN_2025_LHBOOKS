@model int
@{
    ViewData["Title"] = "Đặt hàng thất bại";
}

<div class="container" style="margin-top:180px;>
    <div class="card">
        <div class="card-body text-center">
            <i class="bi bi-check-circle text-success" style="font-size: 5rem;"></i>
            <h2 class="mt-3">Đặt hàng thất bại!</h2>
            <p class="lead">Đơn hàng của bạn thanh toán đã thất bại, vui lòng thanh toán lại</p>
            <p>@TempData["Message"]</p>
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Tiếp tục mua sắm</a>
            </div>
        </div>
    </div>
</div>