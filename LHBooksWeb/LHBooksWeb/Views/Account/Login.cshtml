

 @model LHBooksWeb.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link href="~/customer/styles/loginstyle.css" rel="stylesheet" />
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img style="border-radius: 10px;object-fit: cover;" src="~/customer/images/doc_sach.jpg" />
            </div>

            <form class="login100-form validate-form" asp-action="Login" method="post">
                <span class="login100-form-title">
                    Đăng nhập
                </span>

                @if (ViewBag.IsLockedMessage != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @ViewBag.IsLockedMessage
                    </div>
                }

                <div class="wrap-input100 validate-input">
                    <input asp-for="UserName" class="input100" type="text" placeholder="Tên đăng nhập">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>

                <div class="wrap-input100 validate-input">
                    <input asp-for="Password" class="input100" type="password" id="passwordInput" placeholder="Mật khẩu">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fas fa-lock"></i>
                    </span>
                    <button type="button" class="password-toggle" onclick="togglePassword()" tabindex="-1">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="remember-forgot">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" id="rememberMe">
                        <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Đăng nhập
                    </button>
                </div>

                <div class="text-center p-t-15">
                    <a class="txt2" asp-action="ForgotPassword">
                        Quên mật khẩu?
                    </a>
                </div>

                <div class="text-center" style="padding-top:10px;">
                    <a class="txt2" asp-action="Register">
                        Tạo tài khoản mới
                        <i class="fas fa-long-arrow-alt-right m-l-5"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
        
        // Thêm hiệu ứng tilt cho hình ảnh nếu thư viện tilt.js được cài đặt
        $(document).ready(function(){
            if (typeof $.fn.tilt === 'function') {
                $('.js-tilt').tilt({
                    scale: 1.1
                });
            }
        });
    </script>
}