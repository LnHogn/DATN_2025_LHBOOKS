@model LHBooksWeb.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; margin-top:80px;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4" style="font-size: 2rem;">Đăng nhập</h2>

        <form asp-action="Login" method="post">

            <div class="form-group mb-4">
                <label asp-for="UserName" class="form-label" style="font-size: 1.1rem;"></label>
                <input asp-for="UserName" class="form-control" placeholder="Nhập tên đăng nhập" style="font-size: 1.1rem;" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label" style="font-size: 1.1rem;"></label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" type="password" id="passwordInput" placeholder="Nhập mật khẩu" style="font-size: 1.1rem;" />
                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()" tabindex="-1">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-4" style="font-size: 1.1rem;">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <div class="d-grid text-center mb-2">
                <button type="submit" class="btn btn-primary" style="font-size: 1.1rem;">Đăng nhập</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <small style="font-size: 1.1rem;">Chưa có tài khoản? <a asp-action="Register">Đăng ký</a></small>
        </div>
        <div class="text-center mt-3">
            <small style="font-size: 1.1rem;">Quên mật khẩu? <a asp-action="ForgotPassword">Lấy lại mật khẩu</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
}
