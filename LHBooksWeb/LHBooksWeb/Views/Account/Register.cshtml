@model LHBooksWeb.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; margin-top:200px">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 550px;">
        <h2 class="text-center mb-4" style="font-size: 2rem;">Đăng ký</h2>

        <form asp-action="Register" method="post">

            <div class="form-group mb-4">
                <label asp-for="FullName" class="form-label" style="font-size: 1.1rem;"></label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập tên đầy đủ" style="font-size: 1.1rem;" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="UserName" class="form-label" style="font-size: 1.1rem;"></label>
                <input asp-for="UserName" class="form-control" placeholder="Nhập tên đăng nhập" style="font-size: 1.1rem;" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label" style="font-size: 1.1rem;"></label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email" style="font-size: 1.1rem;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Phone" class="form-label" style="font-size: 1.1rem;"></label>
                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" style="font-size: 1.1rem;" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label" style="font-size: 1.1rem;"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" style="font-size: 1.1rem;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label" style="font-size: 1.1rem;"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Xác nhận mật khẩu" style="font-size: 1.1rem;" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid mb-4">
                <button type="submit" class="btn btn-success" style="font-size: 1.1rem;">Đăng ký</button>
            </div>
        </form>

        <div class="text-center mt-3" style="font-size: 1.3rem;">
            <small>Đã có tài khoản? <a asp-action="Login">Đăng nhập</a></small>
        </div>
    </div>
</div>
